<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.valenciennes.university.surakartagame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".SplashActivity1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SplashActivity2" />

        <activity android:name=".MainActivity" />

        <activity
            android:name=".RulesActivity"
            android:label="@string/app_rules"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".OnePlayerActivity"
            android:label="@string/app_game"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".TwoPlayersActivity"
            android:label="@string/app_game"
            android:theme="@style/AppTheme" />
    </application>

</manifest>